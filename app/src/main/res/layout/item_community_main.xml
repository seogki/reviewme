<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="item"
            type="com.skh.reviewme.Community.model.CommunityModel"/>


    </data>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >


        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/text_regi_name"
            android:text="@{item.name}"
            android:layout_width="150dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            tools:text="홍석기"
            />

        <TextView
            android:text="@{item.text}"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/txt_regi_title"
            app:layout_constraintTop_toBottomOf="@id/text_regi_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_thumbnail"
            android:layout_marginStart="20dp"

            android:gravity="center_vertical"
            tools:text="여기 구나"
            />

        <TextView
            android:id="@+id/txt_regi_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/txt_regi_title"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:padding="5dp"
            android:textColor="@color/black"
            android:text="dddddddddddddddddddasdadddddddddddddadddddddddddddadddddddddddddadddddddddddddadddddddddddddadddddddddddddadddddddddddddadddddddddddddadddddddddddddadddddddddddddadddddddddddddadddddddddddddaddddddddddddda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/img_thumbnail"
            android:transitionName="innerImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:CommunityMainImageUrl="@{item.image}"
            tools:ignore="UnusedAttribute"
            />



    </android.support.constraint.ConstraintLayout>

</layout>